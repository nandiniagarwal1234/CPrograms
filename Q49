//WAPC to initialise the array with 10 integers of your choice. Input an integer from the user. Check and display whether or not the input entered by the user is present in the array or not. Use the binary search technique (Hint: Make sure the array elements are sorted).
#include <stdio.h>

int binarySearch(int arr[], int size, int key) {
    int low = 0, high = size - 1, mid;
    while(low <= high) {
        mid = (low + high) / 2;
        if(arr[mid] == key)
            return mid;
        else if(arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {
    int arr[10] = {3, 7, 12, 18, 24, 29, 35, 42, 50, 61}; // Sorted array
    int key;
    printf("Enter an integer to search: ");
    scanf("%d", &key);

    int result = binarySearch(arr, 10, key);
    if(result != -1)
        printf("%d is present at index %d.\n", key, result);
    else
        printf("%d is not present in the array.\n", key);

    return 0;
}
